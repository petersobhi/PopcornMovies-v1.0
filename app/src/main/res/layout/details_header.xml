<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/details_text_padding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/details_title"
        android:background="@color/colorTilteBackground"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:src="@drawable/s4"
        android:layout_marginTop="@dimen/details_padding"
        android:layout_marginLeft="@dimen/details_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_image"
        android:layout_below="@+id/details_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/details_padding"
        android:padding="@dimen/details_text_padding"
        android:layout_alignTop="@+id/details_image"
        android:layout_toRightOf="@+id/details_image"
        android:layout_toEndOf="@+id/details_image"
        android:layout_alignBottom="@+id/details_image"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/myFontColor"
            android:text="Year"
            android:id="@+id/details_year"
            android:paddingBottom="5dp"/>


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="rating"
            android:id="@+id/details_rating"
            android:isIndicator="true"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" favourite"
            android:textSize="14sp"
            android:id="@+id/details_favourite"
            android:drawableLeft="@drawable/fav0"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:background="@android:color/transparent"

            android:textAllCaps="false"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum"
        android:textColor="@color/myFontColor"
        android:padding="@dimen/details_text_padding"
        android:id="@+id/details_description"
        android:layout_below="@+id/details_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>