<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:name="com.example.peter.popcornmovies.MainFragment"
        android:id="@+id/main_fragment_movies"
        android:tag="@string/fragment_main_tablet"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.example.peter.popcornmovies.DetalisFragment"
        android:id="@+id/main_fragment_details"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/details_header" />
</LinearLayout>